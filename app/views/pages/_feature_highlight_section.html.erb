<%# locals: (image:, alt_text:, title:, description:, link:, link_title:, reverse: false) -%>
<div class="flex flex-col gap-16 sm:flex-row px-4 <%= reverse ? 'sm:flex-row-reverse' : '' %> items-center sm:items-stretch">
  <div class="sm:w-1/2 md:w-1/2">
    <%= image_tag image), alt: alt_text, class: "block w-full h-full object-cover rounded-3xl" %>
  </div>
  <div class="flex flex-col p-8 mx-auto max-w-6xl sm:w-1/2 md:w-1/2 items-center sm:items-start justify-center gap-6 bg-neutral-200 dark:bg-neutral-800 rounded-3xl">
    <h3 class="text-2xl md:text-3xl lg:text-4xl font-bold text-gray-900 dark:text-gray-100 text-center sm:text-left">
      <%= title %>
    </h3>
    <p class="text-lg text-gray-700 dark:text-gray-300 text-center sm:text-left leading-relaxed">
      <%= description %>
    </p>
    <%= link_to link_title, link, class: "text-blue-600 dark:text-blue-500 font-medium hover:underline transition ease-in-out duration-200" %>
  </div>
</div>
