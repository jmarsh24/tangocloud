<dialog id="turbo-confirm" class="modal">
  <form method="dialog" class="modal-box bg-neutral-800 text-white rounded-lg shadow-lg">
    <h3 class="font-bold text-lg">Confirmation</h3>
    <p class="py-4 text-neutral-300">Are you sure you want to proceed?</p>
    <div class="modal-action">
      <button 
        value="cancel" 
        class="btn btn-ghost text-neutral-400 hover:text-white">
        Cancel
      </button>
      <button 
        value="confirm" 
        class="btn btn-primary bg-orange-500 hover:bg-orange-600 text-white">
        Confirm
      </button>
    </div>
  </form>
</dialog>