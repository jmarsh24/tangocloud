<% flash.each do |type, msg| %>
  <% case type %>
  <% when 'alert' %>
    <div class="bg-red-100 dark:bg-red-950 border border-red-400 dark:border-red-600 text-red-700 dark:text-red-500 px-4 py-3 rounded relative" role="alert">
      <span class="block sm:inline"><%= msg %></span>
    </div>
  <% when 'notice' %>
    <div class="bg-blue-100 dark:bg-blue-950 border border-blue-400 dark:border-blue-600 text-blue-700 dark:text-blue-500 px-4 py-3 rounded relative" role="alert">
      <span class="block sm:inline"><%= msg %></span>
    </div>
  <% else %>
    <div class="bg-gray-100 dark:bg-neutral-900 border border-gray-400 dark:border-gray-600 text-gray-700 dark:text-gray-400 px-4 py-3 rounded relative" role="alert">
      <span class="block sm:inline"><%= msg %></span>
    </div>
  <% end %>
<% end %>
