<%= turbo_frame_tag "music-player" do %>
  <div data-controller="peaks" class="fixed bottom-0 left-0 w-full flex flex-col gap-4 justify-between items-center p-4 dark:bg-neutral-900 z-50">
    <div data-peaks-target="container" class="relative w-full h-36 border-2 border-white rounded-lg p-2">
      <div id="time" data-peaks-target="time" class="absolute left-2 top-1/2 transform -translate-y-1/2 text-white text-xs p-1 rounded-sm dark:bg-neutral-900 z-50">
        0:00
      </div>
      <div id="duration" data-peaks-target="duration" class="absolute right-2 top-1/2 transform -translate-y-1/2 text-white text-xs p-1 rounded-sm dark:bg-neutral-900 z-50">
        0:00
      </div>
    </div>
    <div class="flex justify-between items-center w-full">
      <!-- Recording information (left side) -->
      <div class="flex items-center gap-4">
        <%= image_tag recording.digital_remasters.first.album.album_art, class: "w-24 h-24 rounded-lg" %>
        <div class="flex flex-col justify-center">
          <div class="whitespace-nowrap text-lg font-semibold text-white">
            <%= recording.composition.title %>
          </div>
          <div class="whitespace-nowrap text-sm text-gray-400">
            <%= recording.orchestra.name %>
            <% if recording.singers.any? %>
              - <%= recording.singers.map(&:name).join(", ") %>
            <% end %>
          </div>
          <div class="whitespace-nowrap text-sm text-gray-400">
            <%= recording.genre.name %> - <%= recording.year %>
          </div>
        </div>
      </div>
      <div class="flex items-center gap-4">
        <audio data-peaks-target="audio" class="hidden">
          <source src=<%= url_for(recording.digital_remasters.first.audio_variants.first.audio_file) %> />
          <source src=<%= url_for(recording.digital_remasters.first.audio_variants.first.audio_file) %> />
        </audio>
        <button
          data-action="peaks#playPause"
          data-peaks-target="playButton"
          type="button"
          class="rounded bg-gray-800 px-4 py-2 text-xs font-semibold text-white shadow-sm hover:bg-gray-600"
        >
          <div data-peaks-target="playIcon" class="w-6 h-6">
            <%= heroicon("play", variant: :solid) %>
          </div>
          <div data-peaks-target="pauseIcon" class="hidden w-6 h-6">
            <%= heroicon("pause", variant: :solid ) %>
          </div>
        </button>
      </div>
    </div>
  </div>
<% end %>
