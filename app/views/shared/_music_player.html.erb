<%= turbo_frame_tag "music-player" do %>
  <div class="fixed bottom-0 left-0 w-full flex flex-col gap-4 md:flex-row justify-between items-center p-4 dark:bg-neutral-900 z-50">
    <div class="flex justify-start items-center gap-4 w-full md:w-auto">
      <%= image_tag recording.digital_remasters.first.album.album_art, class: "w-24 h-24 rounded-lg" %>
      <div class="flex flex-col justify-center">
        <div class="text-nowrap text-lg font-semibold text-white text-center md:text-left">
          <%= recording.composition.title %>
        </div>
        <div class="text-nowrap text-sm text-gray-400 text-center md:text-left">
          <%= recording.orchestra.name %>
          <% if recording.singers.any? %>
            - <%= recording.singers.map(&:name).join(", ") %>
          <% end %>
        </div>
        <div class="text-nowrap text-sm text-gray-400 text-center md:text-left">
          <%= recording.genre.name %> - <%= recording.year %>
        </div>
      </div>
    </div>
    <div class="flex justify-center items-center w-full md:max-w-sm 2xl:absolute 2xl:left-1/2 2xl:transform 2xl:-translate-x-1/2">
      <audio controls class="w-full max-w-xl">
        <source src="<%= url_for(recording.digital_remasters.first.audio_variants.first.audio_file) %>" type="audio/mpeg">
        Your browser does not support the audio element.
      </audio>
    </div>
  </div>
<% end %>
