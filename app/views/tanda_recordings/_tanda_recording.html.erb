<%# locals: (tanda_recording:) %>
<% cache([:tanda_recording]) do %>
  <div class="w-full flex gap-2 items-center bg-neutral-900 hover:cursor-pointer rounded-lg overflow-hidden hover:bg-neutral-800">
    <%= form_with url: load_tanda_recording_path(tanda_recording.tanda, id: tanda_recording.recording.id), class: "flex w-full gap-4 items-center" do |form| %>
      <%= button_tag type: :submit, class: "flex w-full gap-4 items-center text-left" do %>
        <%= render partial: "recordings/recording", locals: { recording: tanda_recording.recording } %>
      <% end %>
    <% end %>
  </div>
<% end %>