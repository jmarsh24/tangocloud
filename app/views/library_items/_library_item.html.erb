<%# locals: { library_item: } %>
<% cache(library_item) do %>
  <%= link_to library_item.item do %>
    <div 
    data-sortable-handle
    data-sortable-id="<%= library_item.id %>" 
    class="flex items-center gap-4 bg-neutral-900 text-white shadow-lg rounded-sm overflow-hidden hover:bg-neutral-800 transition"
  >
      <% if library_item.item.image&.attached? %>
        <%= image_tag library_item.item.image, class: "w-10 aspect-square object-cover" %>
      <% end%>
      <div class="flex-1">
        <h2 class="text-sm font-medium text-white hover:text-orange-400">
          <%= library_item.item.title  %>
        </h2>
      </div>
    </div>
  <% end %>
<% end %>