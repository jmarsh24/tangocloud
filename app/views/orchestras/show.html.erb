<% cache(@orchestra, @filters) do %>
  <div class="container flex flex-col gap-8 p-8 rounded-lg shadow-lg">
    <!-- Orchestra Header -->
    <div class="flex flex-col items-center">
      <% if @orchestra.image.attached? %>
        <%= image_tag @orchestra.image, class: "w-36 h-36 md:w-48 md:h-48 rounded-full object-cover" %>
      <% else %>
        <%= heroicon "user-circle", variant: :solid, class: "w-36 h-36 md:w-48 md:h-48 fill-neutral-300" %>
      <% end %>
      <h1 class="text-2xl md:text-3xl font-semibold text-neutral-700 dark:text-neutral-200 mt-4">
        <%= @orchestra.name %>
      </h1>
    </div>
    <div class="flex flex-col gap-4">
      <!-- Years Filter -->
      <% if @years.any? %>
        <div class="flex flex-col gap-1">
          <h2 class="text-sm font-medium text-neutral-500 dark:text-neutral-400 uppercase tracking-wide">Years</h2>
          <div class="flex gap-2 flex-wrap">
            <% @years.each do |year| %>
              <% selected = @filters[:year].to_s == year.to_s %>
              <% new_filters = selected ? @filters.except(:year) : @filters.merge(year: year) %>
              <%= link_to orchestra_path(@orchestra, params: new_filters), class: "px-2 py-1 rounded-full text-sm transition #{selected ? 'bg-blue-500 text-white' : 'bg-neutral-100 text-neutral-700 dark:bg-neutral-800 dark:text-neutral-300 hover:bg-neutral-200 dark:hover:bg-neutral-700'}" do %>
                <span class="flex items-center gap-1">
                  <%= year %>
                  <% if selected %>
                    <%= heroicon "x-mark", size: :xs %>
                  <% end %>
                </span>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
      <!-- Genres Filter -->
      <% if @genres.any? %>
        <div class="flex flex-col gap-1">
          <h2 class="text-sm font-medium text-neutral-500 dark:text-neutral-400 uppercase tracking-wide">Genres</h2>
          <div class="flex gap-2 flex-wrap">
            <% @genres.each do |genre| %>
              <% selected = @filters[:genre] == genre.name %>
              <% new_filters = selected ? @filters.except(:genre) : @filters.merge(genre: genre.name) %>
              <%= link_to orchestra_path(@orchestra, params: new_filters), class: "px-2 py-1 rounded-full text-sm transition #{selected ? 'bg-blue-500 text-white' : 'bg-neutral-100 text-neutral-700 dark:bg-neutral-800 dark:text-neutral-300 hover:bg-neutral-200 dark:hover:bg-neutral-700'}" do %>
                <span class="flex items-center gap-1">
                  <%= genre.name %>
                  <% if selected %>
                    <%= heroicon "x-mark", size: :xs %>
                  <% end %>
                </span>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
      <!-- Periods Filter -->
      <% if @orchestra_periods.any? %>
        <div class="flex flex-col gap-1">
          <h2 class="text-sm font-medium text-neutral-500 dark:text-neutral-400 uppercase tracking-wide">Periods</h2>
          <div class="flex gap-2 flex-wrap">
            <% @orchestra_periods.each do |period| %>
              <% selected = @filters[:orchestra_period] == period.name %>
              <% new_filters = selected ? @filters.except(:orchestra_period) : @filters.merge(orchestra_period: period.name) %>
              <%= link_to orchestra_path(@orchestra, params: new_filters), class: "px-2 py-1 rounded-full text-sm transition #{selected ? 'bg-blue-500 text-white' : 'bg-neutral-100 text-neutral-700 dark:bg-neutral-800 dark:text-neutral-300 hover:bg-neutral-200 dark:hover:bg-neutral-700'}" do %>
                <span class="flex items-center gap-1">
                  <%= period.name %>
                  <% if selected %>
                    <%= heroicon "x-mark", size: :xs %>
                  <% end %>
                </span>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
      <!-- Singers Filter -->
      <% if @singers.any? %>
        <div class="flex flex-col gap-1">
          <h2 class="text-sm font-medium text-neutral-500 dark:text-neutral-400 uppercase tracking-wide">Singers</h2>
          <div class="flex gap-2 flex-wrap">
            <% @singers.each do |singer| %>
              <% selected = @filters[:singer] == singer.name %>
              <% new_filters = selected ? @filters.except(:singer) : @filters.merge(singer: singer.name) %>
              <%= link_to orchestra_path(@orchestra, params: new_filters), class: "px-2 py-1 rounded-full text-sm transition #{selected ? 'bg-blue-500 text-white' : 'bg-neutral-100 text-neutral-700 dark:bg-neutral-800 dark:text-neutral-300 hover:bg-neutral-200 dark:hover:bg-neutral-700'}" do %>
                <span class="flex items-center gap-1">
                  <%= singer.name %>
                  <% if selected %>
                    <%= heroicon "x-mark", size: :xs %>
                  <% end %>
                </span>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <!-- Recordings Section -->
    <div>
      <h2 class="text-sm font-medium text-neutral-500 dark:text-neutral-400 uppercase tracking-wide mb-2">Recordings</h2>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <%= render @recordings %>
      </div>
    </div>
  </div>
<% end %>
