<% cache(@orchestra) do %>
  <div class="container flex flex-col gap-8 p-8 rounded-lg shadow-lg">
    <div class="flex flex-col items-center">
      <% if @orchestra.image.attached? %>
        <%= image_tag @orchestra.image, class: "w-36 h-36 md:w-48 md:h-48 rounded-full object-cover" %>
      <% else %>
        <%= heroicon "user-circle", variant: :solid, class: "w-36 h-36 md:w-48 md:h-48 fill-neutral-300" %>
      <% end %>
      <h1 class="text-2xl md:text-3xl font-semibold text-neutral-700 dark:text-neutral-200 mt-4">
        <%= @orchestra.name %>
      </h1>
    </div>
    <div class="flex flex-col gap-4">
      <div class="flex flex-col gap-4">
        <div class="flex flex-col gap-1">
          <h2 class="text-sm font-medium text-neutral-500 dark:text-neutral-400 uppercase tracking-wide">Years</h2>
          <div class="flex gap-2 flex-wrap">
            <% @years.each do |year| %>
              <%= link_to year.to_s, "#", class: "bg-neutral-100 text-neutral-700 dark:bg-neutral-800 dark:text-neutral-300 px-3 py-1 rounded-full text-sm hover:bg-neutral-200 dark:hover:bg-neutral-700 transition" %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="flex flex-col gap-1">
        <h2 class="text-sm font-medium text-neutral-500 dark:text-neutral-400 uppercase tracking-wide">Genres</h2>
        <div class="flex gap-2 flex-wrap">
          <% @genres.each do |genre| %>
            <%= link_to genre.name, "#", class: "bg-neutral-100 text-neutral-700 dark:bg-neutral-800 dark:text-neutral-300 px-3 py-1 rounded-full text-sm hover:bg-neutral-200 dark:hover:bg-neutral-700 transition" %>
          <% end %>
        </div>
      </div>
      <div class="flex flex-col gap-1">
        <h2 class="text-sm font-medium text-neutral-500 dark:text-neutral-400 uppercase tracking-wide">Periods</h2>
        <div class="flex gap-2 flex-wrap">
          <% @orchestra_periods.each do |period| %>
            <%= link_to period.name, "#", class: "bg-neutral-100 text-neutral-600 dark:bg-neutral-800 dark:text-neutral-300 px-3 py-1 rounded-full text-sm hover:bg-neutral-200 dark:hover:bg-blue-700 transition" %>
          <% end %>
        </div>
      </div>
      <div class="flex flex-col gap-1">
        <h2 class="text-sm font-medium text-neutral-500 dark:text-neutral-400 uppercase tracking-wide">Singers</h2>
        <div class="flex gap-2 flex-wrap">
          <% @singers.each do |singer| %>
            <%= link_to singer.name, "#", class: "bg-neutral-100 text-neutral-600 dark:bg-neutral-800 dark:text-neutral-300 px-3 py-1 rounded-full text-sm hover:bg-neutral-200 dark:hover:bg-neutral-700 transition" %>
          <% end %>
        </div>
      </div>
    </div>
    <div>
      <h2 class="text-sm font-medium text-neutral-500 dark:text-neutral-400 uppercase tracking-wide mb-2">Recordings</h2>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <%= render @recordings %>
      </div>
    </div>
  </div>
<% end %>
