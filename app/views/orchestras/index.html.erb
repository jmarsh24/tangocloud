<h1 class="text-2xl font-bold text-neutral-900 dark:text-neutral-100">Orchestras</h1>
<% if @orchestras.present? %>
  <div class="flex flex-col gap-6 py-4 px-2 md:px-0 md:py-16">
    <%= render @orchestras %>
  </div>
  <%= turbo_frame_tag "music-player" %>
<% else %>
  <div class="flex flex-col items-center gap-4 py-8">
    <div class="text-center">
      <%= inline_svg_tag("logos/tangocloud-logo-with-text.svg", class: "w-36 h-auto mx-auto dark:fill-neutral-100") %>
    </div>
    <p class="text-center text-neutral-600 dark:text-neutral-300">No Orchestras found.</p>
  </div>
<% end %>
