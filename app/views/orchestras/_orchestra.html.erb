<% cache(orchestra) do %>
  <%= link_to orchestra, class: "flex flex-col items-center bg-white dark:bg-neutral-900 rounded-lg overflow-hidden shadow-lg hover:bg-gray-100 dark:hover:bg-neutral-700 transition duration-300 snap-start" do %>
    <% if orchestra.image.attached? %>
      <%= image_tag orchestra.image, class: "w-full aspect-square object-cover" %>
    <% else %>
      <div class="w-full aspect-square bg-neutral-200 dark:bg-neutral-800"></div>
    <% end %>
    <h2 class="p-2 text-xs md:text-sm font-md text-center text-neutral-900 dark:text-neutral-100 break-words">
      <%= orchestra.display_name %>
    </h2>
  <% end %>
<% end %>