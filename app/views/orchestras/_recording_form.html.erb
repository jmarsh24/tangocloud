<%# locals: (recording:, orchestra: nil, year: nil, genre: nil, orchestra_period: nil, singer: nil, order:, sort:) %>
<% cache([recording, orchestra, year, genre, orchestra_period, singer, order, sort]) do %>
  <div class="w-full flex gap-2 p-2 items-center hover:cursor-pointer rounded-lg overflow-hidden hover:bg-neutral-900">
    <%= form_with url: play_now_with_search_queue_path(id: recording.id), class: "flex w-full gap-4 items-center" do |form| %>
      <%= form.hidden_field :orchestra, value: orchestra %>
      <%= form.hidden_field :year, value: year %>
      <%= form.hidden_field :genre, value: genre %>
      <%= form.hidden_field :orchestra_period, value: orchestra_period %>
      <%= form.hidden_field :singer, value: singer %>
      <%= form.hidden_field :order, value: order %>
      <%= form.hidden_field :sort, value: sort %>
      <%= button_tag type: :submit, class: "flex w-full gap-4 items-center text-left" do %>
        <%= render partial: "recordings/recording", locals: { recording: } %>
      <% end %>
    <% end %>
  </div>
<% end %>