<div class="container mx-auto px-4 py-8 space-y-12">
  <!-- Featured Playlists Section -->
  <section class="space-y-6">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-200">Featured Playlists</h2>
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-3">
      <%= render collection: @playlists, partial: "playlists/playlist" %>
    </div>
  </section>
  <!-- Popular Orchestras Section -->
  <section class="space-y-6">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-200">Popular Orchestras</h2>
    <div class="grid grid-cols-3 sm:grid-cols-4 lg:grid-cols-10 gap-3">
      <%= render collection: @orchestras, partial: "orchestras/orchestra" %>
    </div>
  </section>
  <!-- Trending Recordings Section -->
  <section class="space-y-6">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-200">Trending Recordings</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-3">
      <%= render collection: @recordings, partial: "recording_form", as: :recording %>
    </div>
  </section>
</div>
