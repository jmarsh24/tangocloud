<%# locals: (playlist:, recording:) %>
<% cache([playlist, recording]) do %>
  <div class="flex gap-2 p-2 items-center hover:cursor-pointer rounded-lg overflow-hidden bg-neutral-950 hover:bg-neutral-800">
    <%= form_with url: play_now_queues_path(parent_type: "playlist", parent_id: playlist.id, item_type: "recording", item_id: recording.id), class: "flex flex-1 gap-4 items-center w-full" do |form| %>
      <%= button_tag type: :submit, class: "flex w-full gap-4 items-center text-left w-full" do %>
        <%= render partial: "recordings/recording", locals: { recording: } %>
      <% end %>
    <% end %>
  </div>
<% end %>