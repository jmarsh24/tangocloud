<div class="container flex flex-col p-6 gap-8 items-center dark:bg-black">
  <% if @playlist.image.attached? %>
    <%= image_tag @playlist.image, class: "w-64 h-64 md:w-24 md:h-24 rounded-lg object-cover shadow-md", loading: "lazy" %>
  <% end %>
  <h1 class="text-2xl font-bold dark:text-neutral-300"><%= @playlist.title %></h1>
  <p class="dark:text-neutral-200"><%= @playlist.description %></p>
  <div class="flex flex-col gap-4">
    <%= render collection: @playlist_items, partial: "playlists/playlist_item" %>
  </div>
</div>
