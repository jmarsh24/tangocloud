<%# locals: { tanda:, recording: } %>
<div class="w-full flex gap-2 p-2 items-center hover:cursor-pointer rounded-lg overflow-hidden bg-neutral-900 hover:bg-neutral-800">
  <%= form_with url: tanda_recordings_path(tanda_id: tanda.id, recording_id: recording.id), class: "flex flex-1 gap-4 items-center w-full" do |form| %>
    <%= button_tag type: :submit, class: "flex w-full gap-4 items-center text-left w-full" do %>
      <%= render partial: "recordings/recording", locals: { recording: } %>
    <% end %>
  <% end %>
</div>