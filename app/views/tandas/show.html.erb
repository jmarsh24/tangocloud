<div class="container flex flex-col p-6 gap-8 items-center dark:bg-black">
  <% if @tanda.image.attached? %>
    <%= image_tag @tanda.image, class: "w-64 h-64 md:w-24 md:h-24 rounded-lg object-cover shadow-md", loading: "lazy" %>
  <% end %>
  <h1><%= @tanda.title %></h1>
  <div class="flex flex-col gap-4">
    <%= render collection: @recordings, partial: "recordings/recording" %>
  </div>
</div>
<%= turbo_frame_tag "music-player", class: "fixed bottom-0 w-full bg-neutral-800 text-white shadow-lg p-4" %>
