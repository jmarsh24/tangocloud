<%# locals: (recording:) %>
<% cache([:search, :recording_form, recording]) do %>
  <div class="w-full flex gap-2 items-center bg-neutral-900 hover:cursor-pointer rounded-lg p-2 border border-neutral-700 hover:bg-neutral-800">
    <%= form_with url: load_search_recording_path(id: recording.id), class: "flex w-full h-full gap-4 items-stretch" do |form| %>
      <%= button_tag type: :submit, class: "flex w-full h-full gap-4 items-center text-left" do %>
        <%= render partial: "recordings/recording", locals: { recording: recording } %>
      <% end %>
    <% end %>
  </div>
<% end %>