<% cache([params[:query], @top_result, @recordings, @orchestras, @playlists, @tandas]) do %>
  <div class="container mx-auto p-4">
    <div class="flex flex-col md:flex-row gap-2">
      <% if @top_result.present? %>
        <div class="md:w-1/4">
          <h2 class="text-xl md:text-2xl font-semibold">Top Result</h2>
          <div class="bg-neutral-800 rounded-lg p-4 md:p-6 flex flex-col md:flex-row gap-2 items-center">
            <%= render @top_result %>
          </div>
        </div>
      <% end %>
      <% if @recordings.present? %>
        <div class="md:w-3/4">
          <h2 class="text-xl md:text-2xl font-semibold">Recordings</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-2 md:gap-6">
            <% @recordings.each do |recording| %>
              <div class="bg-neutral-800 rounded-lg p-4">
                <%= render recording %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <% if @orchestras.present? %>
      <div class="mt-8">
        <h2 class="text-xl md:text-2xl font-semibold">Orchestras</h2>
        <div class="flex space-x-4 overflow-x-auto scrollbar-hide">
          <% @orchestras.each do |orchestra| %>
            <div class="bg-neutral-800 rounded-lg shrink-0 w-40 sm:w-48 p-4">
              <%= render orchestra %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    <% if @playlists.present? %>
      <div class="mt-8">
        <h2 class="text-xl md:text-2xl font-semibold">Playlists</h2>
        <div class="flex space-x-4 overflow-x-auto scrollbar-hide">
          <% @playlists.each do |playlist| %>
            <div class="bg-neutral-800 rounded-lg shrink-0 w-40 sm:w-48 p-4">
              <%= render playlist %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    <% if @tandas.present? %>
      <div class="mt-8">
        <h2 class="text-xl md:text-2xl font-semibold">Tandas</h2>
        <div class="flex space-x-4 overflow-x-auto scrollbar-hide">
          <% @tandas.each do |tanda| %>
            <div class="bg-neutral-800 rounded-lg shrink-0 w-40 sm:w-48 p-4">
              <%= render tanda %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
