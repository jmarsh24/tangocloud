<div class="form-container">
  <div class="form-wrapper max-w-md w-full">
    <div>
      <%= inline_svg_tag("logos/tangocloud-logo-with-text.svg", class: "form-header dark:fill-neutral-100") %>
      <h2 class="mt-6 text-center text-2xl font-bold text-neutral-900 dark:text-neutral-100">
        Forgot your password?
      </h2>
      <p class="mt-2 text-center text-sm text-neutral-600 dark:text-neutral-400">
        Enter your email address below to reset your password.
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="form-body">
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-input-group">
          <div class="form-group">
            <%= f.label :email, class: "label text-neutral-900 dark:text-neutral-100", for: "email-address" %>
            <%= f.email_field :email, id: "email-address", autofocus: true, autocomplete: "email", class: "input dark:bg-neutral-800 dark:text-neutral-100 dark:border-neutral-700" %>
            <%= inline_errors_for(resource, :email) %>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: "button" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
