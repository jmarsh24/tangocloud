
<div class="flex flex-col gap-16 py-8">
  <%= inline_svg_tag("logos/tangocloud-logo-with-text.svg", class: "w-36 h-auto mx-auto dark:fill-neutral-100") %>
  <%= turbo_frame_tag "form_frame" do %>
    <%= form_with(url: sign_up_path) do |form| %>
      <div class="form-control space-y-4">
        <div>
          <label class="input input-bordered flex items-center gap-2 <%= error_class(@user, :email) %>">
            <%= heroicon("envelope", variant: :solid) %>
            <%= form.email_field :email, value: @user.email, required: true, autofocus: true, autocomplete: "email", placeholder: "Email", class: "grow" %>
            <%= inline_errors_for(@user, :email) %>
          </label>
        </div>
        <div>
          <label class="input input-bordered flex items-center gap-2 <%= error_class(@user, :password) %>">
            <%= heroicon("key", variant: :solid) %>
            <%= form.password_field :password, required: true, autocomplete: "new-password", minlength: 8, placeholder: "Password", class: "grow" %>
            <%= inline_errors_for(@user, :password) %>
          </label>
        </div>
        <div>
          <label class="input input-bordered flex items-center gap-2 <%= error_class(@user, :password_confirmation) %>">
            <%= heroicon("key", variant: :solid) %>
            <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Confirm Password", class: "grow" %>
          </label>
          <%= inline_errors_for(@user, :password_confirmation) %>
        </div>
        <div class="flex justify-center">
          <%= form.submit "Sign up", class: "btn btn-primary btn-block" %>
        </div>
        <div class="flex justify-center gap-4 py-2">
          <%= link_to "Already have an account?", sign_in_path, class: "link", data: { turbo_frame: "modal" } %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
