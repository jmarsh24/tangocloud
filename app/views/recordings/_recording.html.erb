<% cache(recording) do %>
  <div class="w-full flex gap-4 items-center hover:bg-neutral-900 hover:cursor-pointer rounded-lg">
    <%= form_with url: load_into_queue_recording_path(recording), class: "flex gap-4 items-center" do |form| %>
      <%= form.hidden_field :year, value: params[:year] %>
      <%= form.hidden_field :genre, value: params[:genre] %>
      <%= form.hidden_field :orchestra, value: params[:orchestra] %>
      <%= form.hidden_field :orchestra_period, value: params[:orchestra_period] %>
      <%= form.hidden_field :singer, value: params[:singer] %>
      <%= button_tag type: :submit, class: "flex gap-4 items-center text-left" do %>
        <%= image_tag recording.digital_remasters.first.album.album_art, class: "w-16 h-16 md:w-20 md:h-20 rounded-lg object-cover" %>
        <div class="flex flex-col items-start text-left">
          <div class="text-sm font-semibold">
            <%= recording.composition.title %>
          </div>
          <div class="text-xs text-gray-500">
            <%= recording.orchestra.name %>
            <% if recording.singers.present? %>
              &middot; <%= recording.singers.map(&:name).compact.join(", ") %>
            <% end %>
          </div>
          <div class="text-xs text-gray-500">
            <%= recording.genre.name %> - <%= recording.year %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>