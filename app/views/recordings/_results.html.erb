<%# locals: {recordings:, tanda:} %>
<div class="flex flex-col gap-4">
  <% if recordings.any? %>
    <ul>
      <% recordings.each do |recording| %>
        <div class="w-full flex gap-2 p-2 items-center hover:cursor-pointer rounded-lg overflow-hidden hover:bg-neutral-800">
          <%= form_with url: tanda_tanda_recordings_path(tanda, recording_id: recording.id), class: "flex flex-1 gap-4 items-center w-full" do |form| %>
            <%= button_tag type: :submit, class: "flex w-full gap-4 items-center text-left w-full" do %>
              <%= render partial: "recordings/recording", locals: { recording: recording } %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </ul>
  <% else %>
    <p class="text-neutral-500">No recordings found.</p>
  <% end %>
</div>