<div id="<%= dom_id session %>" class="p-4 bg-white rounded-md shadow-md dark:bg-neutral-800 flex flex-col gap-2">
  <div class="flex">
    <span class="font-bold w-1/3">User Agent:</span>
    <span class="text-sm text-slate-700 dark:text-neutral-300 w-2/3"><%= session.user_agent %></span>
  </div>
  <div class="flex">
    <span class="font-bold w-1/3">Ip Address:</span>
    <span class="text-sm text-slate-700 dark:text-neutral-300 w-2/3"><%= session.ip_address %></span>
  </div>
  <div class="flex">
    <span class="font-bold w-1/3">Created at:</span>
    <span class="text-sm text-slate-700 dark:text-neutral-300 w-2/3"><%= session.created_at %></span>
  </div>
  <div class="mt-4">
    <% if @sessions.size == 1 %>
      <%= button_to "Log out", session, method: :delete, class: "button" %>
    <% else %>
      <%= button_to "Log out", session, method: :delete, class: "button", data: { turbo_frame: "modal" } %>
    <% end %>
  </div>
</div>
