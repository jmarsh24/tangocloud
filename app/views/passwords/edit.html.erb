<div class="form-container">
  <div class="form-wrapper">
    <div>
      <%= inline_svg_tag("logos/tangocloud-logo-with-text.svg", class: "form-header") %>
    </div>

    <% if alert.present? %>
      <p class="form-alert"><%= alert %></p>
    <% end %>

    <%= form_with(model: @user, url: password_path, method: :patch) do |form| %>
      <div class="form-body">
        <div class="form-input-group">
          <div class="form-group">
            <%= form.label :password_challenge, "Current password", class: "label", for: "password_challenge" %>
            <%= form.password_field :password_challenge, required: true, autofocus: true, autocomplete: "current-password", class: "input" %>
            <%= inline_errors_for(@user, :password_challenge) %>
          </div>
          <div class="form-group">
            <%= form.label :password, "New password", class: "label", for: "password" %>
            <%= form.password_field :password, required: true, autocomplete: "new-password", class: "input" %>
            <%= inline_errors_for(@user, :password) %>
            <div class="password-hint">12 characters minimum.</div>
          </div>
          <div class="form-group">
            <%= form.label :password_confirmation, "Confirm new password", class: "label", for: "password_confirmation" %>
            <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "input" %>
            <%= inline_errors_for(@user, :password_confirmation) %>
          </div>
        </div>
        <div class="actions">
          <%= form.submit "Save changes", class: "button" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
