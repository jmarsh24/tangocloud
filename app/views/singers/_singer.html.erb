<%# locals: { singer: } %>
<% cache(singer) do %>
  <div class="flex flex-col items-center w-32">
    <div class="block w-full h-32 rounded-lg overflow-hidden">
      <% if singer.image.attached? %>
        <%= image_tag singer.image, class: "w-full h-full object-cover" %>
      <% else %>
        <div class="w-full h-full bg-neutral-200 dark:bg-neutral-800"></div>
      <% end %>
    </div>
    <div class="mt-2 text-center">
      <h2 class="text-sm font-semibold text-neutral-800 dark:text-neutral-100 break-words">
        <%= singer.name %>
      </h2>
    </div>
  </div>
<% end %>