{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"target": "ES6",
		"module": "commonjs",
		"moduleResolution": "Node",
		"jsx": "react-native",
		"lib": ["dom", "esnext"],
		"noEmit": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@/assets/*": ["./assets/*"]
		}
	},
	"tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
	"types": ["nativewind/types"],
	"exclude": ["node_modules"],
	"include": [
		"app",
		"**/*.ts",
		"**/*.tsx",
		"*.js",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"app/(auth)",
		"app/(tabs)",
		"app/player"
	]
}
