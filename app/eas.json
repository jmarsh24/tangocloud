{
  "cli": {
    "version": "7.2.0"
  },
  "build": {
    "base": {
      "android": {
        "image": "latest",
        "ndk": "21.4.7075529"
      },
      "ios": {
        "image": "latest",
        "node": "20.11.0",
        "yarn": "1.22.21"
      }
    },
    "development": {
      "extends": "base",
      "env": {
        "ENVIRONMENT": "development",
        "EXPO_PUBLIC_GRAPHQL_ENDPOINT": "http://localhost:3000/api/graphql"
      },
      "android": {
        "distribution": "internal",
        "withoutCredentials": true,
        "gradleCommand": ":app:assembleDebug"
      },
      "ios": {
        "simulator": true,
        "buildConfiguration": "Debug",
        "resourceClass": "m-medium"
      }
    },
    "production": {
      "env": {
        "EXPO_PUBLIC_GRAPHQL_ENDPOINT": "https://tangocloud.app/api/graphql"
      },
      "ios": {
        "resourceClass": "m-medium"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "jmarsh24@gmail.com",
        "ascAppId": "6476820703",
        "appleTeamId": "8DN6UL88PX"
      }
    }
  }
}
