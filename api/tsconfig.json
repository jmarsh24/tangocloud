{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "es2020",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "paths": {
      "@/*": ["./app/frontend/*"],
    },
  },
  "exclude": ["**/dist", "**/node_modules", "**/public", "**/vendor", "./app"],
}
