<%# locals: (image:, alt_text:, title:, description:, link:, link_title:, reverse: false) -%>
<div class="flex flex-col gap-16 sm:flex-row px-4 <%= reverse ? 'sm:flex-row-reverse' : '' %>">
  <div class="flex items-center sm:w-1/2 md:w-1/2">
    <%= image_tag image, alt: alt_text, class: "block w-full h-full object-cover" %>
  </div>
  <div class="flex flex-col p-8 mx-auto max-w-6xl sm:w-1/2 md:w-1/2 rounded-3xl items-center sm:items-start gap-4">
    <h3 class="title title-small text-center sm:text-left md:text-4xl">
      <%= title %>
    </h3>
    <p class="text text-center sm:text-left">
      <%= description %>
    </p>
    <%= link_to link_title, link, class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
  </div>
</div>
